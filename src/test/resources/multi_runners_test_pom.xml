<project>
	<build>
		<plugins>
			<plugin>
				<artifactId>maven-javadrop-plugin</artifactId>
				<executions>
					<execution>
						<phase>install</phase>
						<goals>
							<goal>javadrop</goal>
						</goals>
					</execution>
				</executions>
				<configuration>
					<runnerClasses>
						<param>org.javadrop.runner.impl.JettyStrategy</param>
						<param>org.javadrop.runner.impl.JavaAppStrategy</param>
					</runnerClasses>

					<packagerClasses>
						<param>org.javadrop.packaging.impl.RPMPackagerStrategy</param>
					</packagerClasses>
					<!-- Extra scripts that are not normally included -->
					<javadropVariables>
						<JMX_PORT>1093</JMX_PORT>
						<USER_ID>20</USER_ID>
						<GROUP_ID>700</GROUP_ID>
						<RUNNER_USER>testuser</RUNNER_USER>
						<RUNNER_GROUP>ioapp</RUNNER_GROUP>
						<PKG_INSTALL_LOC>/usr/local/iovation/jtestapp</PKG_INSTALL_LOC>
						<APP_NAME>jtestapp</APP_NAME>
						<APP_MAIN_CLASS>test.class</APP_MAIN_CLASS>
						<JTY_NAME>jtytestsvc</JTY_NAME>
						<JTY_CONTEXT_NAME>jtytestsvc</JTY_CONTEXT_NAME>
						<SVC_USER>testuser</SVC_USER>
						<SVC_GROUP>ioapp</SVC_GROUP>
						<SVC_ROOT>/usr/local/iovation</SVC_ROOT>
						<SVC_LOGROOT>/var/log/iovation</SVC_LOGROOT>
						<SVC_REDIS_LOG_ROOT>/var/log/redis</SVC_REDIS_LOG_ROOT>
						<SVC_CACHE_ROOT>/cache</SVC_CACHE_ROOT>
						<SVC_USER_ID>20</SVC_USER_ID>
						<SVC_GROUP_ID>700</SVC_GROUP_ID>
						<SVC_MAIN_CLASS>test.class</SVC_MAIN_CLASS>
						<PKG_NAME>jtestapp</PKG_NAME>
						<PKG_VERSION>1.0-SNAPSHOT</PKG_VERSION> <!-- project.version -->
						<PKG_RELEASE>1309218173</PKG_RELEASE> <!-- build.version -->
					</javadropVariables>
				</configuration>
			</plugin>
		</plugins>
	</build>

</project>
